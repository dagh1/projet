{% extends 'base.html.twig' %}

{% block title %} Gestion Projet{% endblock %}

{% block body %}
    {% if projets  %}
    {% for projet in projets %}
        <div class="col-md-6">
            <div class="card card-testimonial">
                <div class="card-avatar">
                    <a>
                        <i class="material-icons">assignment</i>
                    </a>
                </div>
                <div class="card-content">

                    <br>
                    <h6>Sujet du projet </h6>
                    <a href="{{ path('espace_etudiant_projet_voir', {'id': projet.id}) }}">{{ projet.sujet }}</a><br>
                    <h6>Description:</h6>
                    <p>{{ projet.description }}</p>
                </div>

            </div>
        </div>
    {% endfor %}
    {% else %}
    <div class="col-md-12">
        <div class="card card-testimonial">
           <h3>Pas de projets   </h3>
            </div>

        </div>
    </div>
    {% endif %}
{% endblock %}