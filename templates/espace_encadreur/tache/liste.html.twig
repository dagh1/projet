{% extends 'base.html.twig' %}

{% block title %} Gestion tache{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">Liste des taches</h4>
                    <a href="{{ path('admin_tache_ajouter') }}" class="btn btn-success"><i class="material-icons">control_point</i>
                        Ajouter</a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th class="col-lg-3">titre</th>
                                <th class="col-lg-2">dateInsertion</th>
                                <th class="col-lg-2">Projet</th>


                                <th class="text-right col-lg-1">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for tache in taches %}
                                <tr>
                                    <td>{{ tache.titre|capitalize }}</td>
                                    <td>{{ tache.dateInsertion }}</td>
                                    <td>{{ tache.projet.nom|capitalize }}</td>

                                    <td class="td-actions text-right">
                                        <a href="{{ path('admin_tache_modifier', {'id': tache.id}) }}" rel="tooltip"
                                           class="btn btn-success btn-simple"
                                           data-original-title="" title="">
                                            <i class="material-icons">edit</i>
                                        </a>
                                        <a href="{{ path('admin_tache_supprimer', {'id': tache.id}) }}"
                                           rel="tooltip" class="btn btn-danger btn-simple confirm-supp"
                                           data-original-title="" title="">
                                            <i class="material-icons">close</i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
